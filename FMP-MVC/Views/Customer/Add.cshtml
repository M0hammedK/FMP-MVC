@{
    ViewData["Title"] = "Add Movie";
    @model Movie
}

<h1>Add Movie</h1>
<form asp-action="Add" asp-controller="Customer" method="post">
    <div class="form-group">
        <label asp-for="Title">Title</label>
    <br />
        <input asp-for="Title" required/>
    <br />
    <br />
        <label asp-for="Date">Date:</label>
    <br />
        <input asp-for="Date" required />
    <br />
    <br />
   
        <label asp-for="Price">Price</label>
    <br />
        <input asp-for="Price" required />
    <br />
    <br />
    
        <label asp-for="Movie_Duration">Movie Duration</label>
    <br />
        <input type="text" asp-for="Movie_Duration" pattern="^([0-9]{2}):([0-5][0-9]):([0-5][0-9])" title="the duration must be like => HH:MM:SS, sigle number must be like 01:02:03, maximum 99:60:60" />
    <br />
    <br />
   
        <label asp-for="Description">Description</label>
    <br />
        <input asp-for="Description" required />
    <br />
    <br />
        
    <input type="submit" value="Add"/>
    <div/>

</form>

